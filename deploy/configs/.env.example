# FeedSpine Environment Configuration
#
# Copy this file to .env and customize for your environment.
# DO NOT commit .env to version control.

# =============================================================================
# Storage Backend
# =============================================================================
# Options: memory, postgres, duckdb
FEEDSPINE_STORAGE_BACKEND=memory

# PostgreSQL (if using postgres backend)
POSTGRES_USER=feedspine
POSTGRES_PASSWORD=feedspine
POSTGRES_DB=feedspine
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
FEEDSPINE_POSTGRES_DSN=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# DuckDB (if using duckdb backend)
FEEDSPINE_DUCKDB_PATH=./data/feedspine.duckdb

# =============================================================================
# Cache Backend
# =============================================================================
# Options: memory, redis
FEEDSPINE_CACHE_BACKEND=memory

# Redis (if using redis backend)
REDIS_HOST=localhost
REDIS_PORT=6379
FEEDSPINE_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# Search Backend
# =============================================================================
# Options: memory, elasticsearch
FEEDSPINE_SEARCH_BACKEND=memory

# Elasticsearch (if using elasticsearch backend)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
FEEDSPINE_ELASTICSEARCH_URL=http://${ELASTICSEARCH_HOST}:${ELASTICSEARCH_PORT}
FEEDSPINE_ELASTICSEARCH_INDEX=feedspine

# =============================================================================
# API Configuration
# =============================================================================
FEEDSPINE_API_HOST=0.0.0.0
FEEDSPINE_API_PORT=8000
FEEDSPINE_API_RELOAD=false
FEEDSPINE_API_WORKERS=4

# API Documentation
FEEDSPINE_API_TITLE=FeedSpine API
FEEDSPINE_API_DESCRIPTION=Storage-agnostic feed capture framework
FEEDSPINE_API_VERSION=0.1.0

# =============================================================================
# Logging
# =============================================================================
FEEDSPINE_LOG_LEVEL=INFO
FEEDSPINE_LOG_FORMAT=json

# =============================================================================
# Data Directories
# =============================================================================
FEEDSPINE_DATA_DIR=./data
FEEDSPINE_BLOB_DIR=./data/blobs

# =============================================================================
# SEC EDGAR Specific (py-sec-edgar integration)
# =============================================================================
# SEC API rate limiting
SEC_EDGAR_RATE_LIMIT=10
SEC_EDGAR_USER_AGENT=MyCompany/1.0 (contact@mycompany.com)

# Feed URLs
SEC_EDGAR_RSS_URL=https://www.sec.gov/cgi-bin/browse-edgar?action=getcurrent&type=&company=&dateb=&owner=include&count=100&output=atom
SEC_EDGAR_FULL_INDEX_URL=https://www.sec.gov/Archives/edgar/full-index/
